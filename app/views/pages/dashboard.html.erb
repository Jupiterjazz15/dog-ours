<div class= "fix_padding_navbar_bottom" >
  <div class="container flex-center">
    <!-- Avatar user & ses infos %> -->
    <p><%= cl_image_tag current_user.photo.key, class: "avatar" %></p>
    <p><%= current_user.first_name %> <%= current_user.last_name %></p>
    <p><%= link_to "Modify my profile", myprofile_path %> </p>

    <!-- Avatar chien & ses infos %> -->
    <% if current_user.has_a_dog? %>
    <p><%= cl_image_tag current_user.dogs.first.photo.key, class: "avatar" %></p>
    <p><%= link_to "Modify my doggo", edit_dog_path(current_user.dogs.first.id) %></p>
    <% else %>
      <%= link_to "Add your doggo", new_dog_path%>
    <% end %>

    <!-- Infos des balades %> -->
    <p><%= link_to "My walks", mywalks_path %></p>
    <p><%= link_to "My Booking request", myrequest_path %></p>
    <p><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-dark" %></p>
  </div>
</div>
