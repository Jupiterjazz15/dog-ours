<div class="fix_padding_navbar_bottom">
  <div class="d-flex justify-content-center container banner">
    <%= image_tag "logo.png" %>
  </div>
  <h2 class="text-center line-separator">Chats with Dogbuddies </h2>

  <% @bookings.each do |booking| %>
    <%= link_to discussion_walk_path(booking.walk) do %>
      <div class="d-flex container-messages">
        <div class="d-flex" style="align-items: center;">
          <div class="avatar-name-messagerie">
            <% if booking.walk.user.photo.attached? %>
              <%= cl_image_tag booking.walk.user.photo.key %>
            <% else %>
              <%= image_tag "logo_without_user.png" %>
            <% end %>
          </div>
          <div class="info-message">
            <h4 class="walk-title"> <%= booking.walk.name.capitalize %></h4>
            <h5><%= booking.walk.user.first_name %> <em>& <%= booking.walk.user.dogs.first.name %></em></h5>
            <p><em><%= booking.walk.messages.last&.content %></em></p>
          </div>
        </div>
      </div>
     <% end %>
  <% end %>
</div>
