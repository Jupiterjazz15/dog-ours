<div id="message-<%= message.id %>">
  <small>
    <div class="avatar-messaging <%= 'justify-content-end' if message.sender?(current_user) %>">
      <%= cl_image_tag message.user.photo.key %>
      <strong><%= message.user.first_name %></strong>
      <i><%= message.created_at.strftime("%a %e at %l:%M %p") %></i>
    </div>
  </small>
  <p><%= message.content.capitalize %></p>
</div>
