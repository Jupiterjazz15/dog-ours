  <div class="container">
    <% random_walk = @walks.sample %>
        <div class="walk-card">
          <div class="container-dog-photo">
            <%= cl_image_tag random_walk.user.dogs.first.photo.key %>
            <p><i class="fa-solid fa-hourglass-start"></i> <%= random_walk.duration %>min</p>
          </div>

          <div class="walk-card-content">
            <div class="card-head">
              <div class="avatar-name">
                <%= cl_image_tag random_walk.user.photo.key %>
                <h2><%= random_walk.user.first_name %></h2>
              </div>
            </div>
            <div class="info-walk-card">
              <p><i class="fa-solid fa-location-pin"></i> <%= random_walk.starting_point %></p>
              <p><i class="fa-regular fa-clock"></i> <%= random_walk.start_time.strftime("%e/%m - %H:%M") %></p>
            </div>
          </div>
        </div>
    </div>
