<div class= "fix_padding_navbar_bottom">
  <%= simple_form_for(current_user, url: user_registration_path, html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :photo, as: :file, label_html: { class: 'upload-photo'}, label: 'My photo', input_html: { class: 'd-none' } %>
      <%= f.input :phone_number %>
      <%= f.input :description %>
      <%= f.input :birth_date %>

    <div class="form-actions">
      <%= f.button :submit, "Save" %>
    </div>
  <% end %>
</div>
